<div class="text-center">
  <h1 class="title ">Your dashboard</h1>

</div>

<div class="container">
<div class="text-center">
  <%= image_tag current_user.facebook_picture_url, class: "avatar-large" %>
</div>

  <div class="dashboard-frame">
    <div class="row">
      <div class="col-xs-5">
        <h2 class="yellow-text">Title</h2>
      </div>
      <div class="col-xs-3">
        <h2 class="yellow-text">
          Kisses
        </h2>
      </div>
      <div class="col-xs-2">
        <h2 class="yellow-text">
          Status
        </h2>
      </div>
      <div class="col-xs-2">
        <h2 class="yellow-text">
          Confirm
        </h2>
      </div>
    </div>
    <% @bookings.each do |booking| %>
      <div class="row">
        <div class="col-xs-5 ">
          <p><%= booking.challenge.title %></p>
        </div>
        <div class="col-xs-3">
          <p><%= booking.challenge.category.kisses %></p>
        </div>
        <div class="col-xs-2">
          <p><%= booking.status %></p>
        </div>
        <% if booking.status == "created" %>
          <div class="col-xs-2">
            <a href="#" data-toggle="modal" data-target="#request-sent" class="btn btn-success">Done?</a>
            <!-- <button type="button", class="btn btn-success"> Done? </button> -->
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>


<!-- modal -->
<div class="modal fade" id="request-sent" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content lovee-modal">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h3 class="modal-title text-center heading-blue">Confirmation request sent</h3>
      </div>
      <div class="modal-body text-center">
        <p> A confirmation request has been sent to
        <% if current_user && current_user.partner && current_user.partner. first_name %>
           with <span id="play-name"> <%= current_user.partner.first_name %></span>
          You will get your LoVee kisses as soon as they confirm you completed this challenge.
           <% else %>
            You do not have a partner yet, please add one before sending a confirmation !
        <% end %>
        </p>
        <div class="modal-footer">
          <div class="text-center">
            <button type="button" class="btn button-lovee button-rules button-lovee-small" data-dismiss="modal">OK</button>
          </div>
        </div>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


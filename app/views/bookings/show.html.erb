<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-4 col-md-offset-4">
      <div class= "card" >
        <div class=" text-center text-align lovee-message">
          <h2> Hey lucky Dude !</h2>
          <br>
          <p> <strong> LoVee </strong> has just selected randomly an awesome challenge to offer</p>

          <br>
          <div class="icons-size">
            <i class="fa fa-thumbs-up lovee-icon" aria-hidden="true"></i>
          </div>
          <br>
          <p>You will kow the challenge to execute as soon as your partner will accept it.</p>
        </div>
        </div>
      </div>
    </div>
  </div>


  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-4 col-md-offset-4">
        <div class= "card" >
          <div class=" text-center text-align send-message">
            <% if current_user.partner_id.nil? %>
              <p>You need a partner to play</p>
              <%= link_to t(".top_call_to_action", default: "Add your partner"), "" , class: "button-lovee button-lovee-small  btn", "data-toggle" => "modal", "data-target" => "#invitation" %>
            <% else %>
              <%= link_to t(".top_call_to_action", default: " Good luck "), dashboard_path , class: "button-lovee button-lovee-small  btn" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>




<!-- Modal -->
<div class="modal fade" id="invitation" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Invite your partner</h4>
      </div>
      <div class="modal-body">
        <%= form_tag invite_path, method: :get do %>
          <%= email_field_tag :email, nil, class: "form-control" %>
          <%= submit_tag "invite", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>






